    <section id="pricing">
      <div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">List of Projects</h1>
    <p class="lead">Easy to Explore and find a team</p>
  </div>
</div>

  <div class="row">





    <%userprojects.projects.forEach(function(project){%>

  
    <div class="projects col-lg-4 col-md-6">

      <div class="card"style="height:370px;" >
        <div class="card-header">
          <h4><a href="/projects/<%=project.id%>" style="text-decoration: none;"><%=project.title%></a></h4>
        </div>

        <div class="card-body">
          <h2 style="font-size: 20px;"><%=project.descrip.substring(0,25)%></h2>

          <a href="/projects/editproject/<%=project.id%>"><button class="btn btn-lg btn-block btn-dark black darken-4" type="button">Edit</button></a>
          <form action="/projects/editproject/delete/<%=project.id%>?_method=DELETE" method="post">
            <button class="btn btn-lg btn-block btn-dark black darken-4" type="submit">Delete</button>
          </form>

        </div>

      </div>
 
    </div>
  
  <%});%>
  



  </div>

</section>



